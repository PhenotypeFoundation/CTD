<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ctd</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">secret</property>
    <property name="hibernate.connection.pool_size">10</property>
    <mapping resource="ctd/himapping/StudySampleAssay.hbm.xml"/>
    <mapping resource="ctd/himapping/Ticket.hbm.xml"/>
    <mapping resource="ctd/himapping/Chip.hbm.xml"/>
    <mapping resource="ctd/himapping/ChipAnnotation.hbm.xml"/>
    <mapping resource="ctd/himapping/Expression.hbm.xml"/>
    <mapping resource="ctd/himapping/Protocol.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
